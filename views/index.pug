extends base.pug

block content
    div#app.container
        div#logo
            img(src="https://image.flaticon.com/icons/svg/216/216736.svg",style="width:5%")
        nav
            a.logIn(style="cursor:pointer" onclick="boton()") Apply Now
            a.vendorLogin(href="") Vendor Login
        main
        div#signIn
            br
